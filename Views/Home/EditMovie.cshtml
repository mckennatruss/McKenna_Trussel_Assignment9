@{
    ViewBag.Title = "Edit a Movie";
}

@model McKenna_Trussel_Assignment3.Models.ApplicationResponse

<div class="border-info table-bordered center">
    <form asp-action="EditDone" method="post">
        <div class="text-center text-info" hidden>
            <label asp-for="MovieID" hidden></label>
            <input asp-for="MovieID" hidden required/>

        </div>
        <div class="text-center text-info">
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" required />

        </div>
        <div class="text-center text-info">
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" required />
        </div>
        <div class="text-center text-info">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" required />
        </div>
        <div class="text-center text-info">
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" required />
        </div>
        <div class="text-center text-info">
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating" required>
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div class="text-center text-info">
            <label asp-for="Edited">Edited?</label>
            <select asp-for="Edited">
                <option value="">Select One</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div class="text-center text-info">
            <label asp-for="Lent">Lent To:</label>
            <input asp-for="Lent" />
        </div>
        <div class="text-center text-info">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" maxlength="25" />
        </div>

        <input type="submit" id="submitButton" class="btn-info" value="Update" />

        <div class="text-info" asp-validation-summary="All"></div>
    </form>
</div>